#*******************************************************************************
#   ___   public
#  ¦OUX¦  GNU “make”
#  ¦/C+¦  OUX/C+ OS building
#   ---   ELF to OUX executable
#         makefile
# ©overcq                on ‟Gentoo Linux 23.0” “x86_64”              2025‒5‒2 O
#*******************************************************************************
CC := clang
CFLAGS := -Os
#===============================================================================
all: build
build: elf2oux
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
.PHONY: all build clean install uninstall
#===============================================================================
elf2oux: main.c Makefile
	$(CC) $(CFLAGS) -fwrapv -Wall -Wextra -s -o $@ $(filter %.c,$^)
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
clean:
	rm -f elf2oux
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
install: elf2oux
	install -o root -g root -m 755 $< /usr/bin
uninstall:
	rm -f /usb/bin/elf2oux
#*******************************************************************************
